@model TransferViewModel

@{
    ViewData["Title"] = "Transfer";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" asp-antiforgery="true">
                <h4>Tranfer money.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AccountFrom"></label>
                    <input asp-for="AccountFrom" class="form-control" />
                    <span asp-validation-for="AccountFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AccountTo"></label>
                    <input asp-for="AccountTo" class="form-control" />
                    <span asp-validation-for="AccountTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Transfer</button>
                </div>
            </form>
        </section>
    </div>
</div>
